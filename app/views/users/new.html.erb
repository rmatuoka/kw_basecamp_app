<div id="LoginBox" class="six columns centered">
	<h1>Digite seu usuário e senha do Basecamp.</h1>

	<%=form_tag users_path, :method => :post%>

	<labeL>Usuário</labeL>
	<%=text_field_tag :username%>

	<labeL>Senha</labeL>
	<%=password_field_tag :password%>


	<%=submit_tag "Login", :class => "large button"%>
	<%=link_to("Hein? O que é isso?", "#", :class => "secondary large button")%>
	</form>
</div>

